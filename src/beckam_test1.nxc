void findBall() {
	while (1) {
		int dir = sensorsValues.ir_dir;
		int power = ((dir - 5) * 75) / 5;

		if (dir != 5) {
			int lpower = -power;
			int rpower = power;
			OnFwd(OUT_DRIVE_L, lpower);
			OnFwd(OUT_DRIVE_R, rpower);
		}
		else {
			Off(OUT_DRIVE_L);
			Off(OUT_DRIVE_R);
			break;
		}
		Wait(20);
	}
}

